@model List<Cineplexx.Domain.DomainModels.Product>
@{
    ViewData["Title"] = "Index 201064";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add new movie</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
    @:<div class="row">


        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 20rem;height:50rem;">
                <img class="card-img-top" src="@item.ProductImage" alt="Image" style="height:70%;" />
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>

                    <p class="card-text">Цена на билетот @item.Price ден</p>
                    <p class="card-text">Датум на емитување @item.data</p>
                    <p class="card-text">Рејтинг @item.Rating</p>
                </div>
                <div class="footer">
                    <a asp-controller="Products" asp-action="AddProductToCard" asp-route-id="@item.Id" class="btn btn-info">Add To Card</a>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Delete</a>

                </div>
            </div>
        </div>


        if (i % 3 == 2)
        {
    @:</div>
    }

    }
</div>